= provide(:title, "Change your password")

  = form_for resource, :validate => true, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    %fieldset
      = render 'devise/shared/error_messages'
        = f.hidden_field :reset_password_token
        .control-group
          .control-label= f.label :password, "New password"
          .controls= f.password_field :password
        .control-group
          .control-label= f.label :password_confirmation, "Confirm new password"
          .controls= f.password_field :password_confirmation
        .form-actions
          = f.submit "Change password", class: "btn btn-large btn-primary"
          = render 'shared/back_button'

= render "devise/shared/links"