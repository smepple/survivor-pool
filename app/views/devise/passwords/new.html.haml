= provide(:title, "Forgot your password?")
= provide(:headline, "Forgot your password?")

= form_for resource, :validate => true, :as => resource_name, :url => password_path(resource_name), :html => { class: "new user form-horizontal", :method => :post } do |f|
  %fieldset
    = render 'devise/shared/error_messages'
    .control-group
      .control-label= f.label :email
      .controls= f.email_field :email
    .form-actions
      = f.submit "Send password reset", class: "btn btn-large btn-primary"
      = render 'shared/back_button'

= render "devise/shared/links"