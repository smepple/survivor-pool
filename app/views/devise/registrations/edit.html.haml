= provide(:title, "Edit profile")
= provide(:headline, "Edit profile")
= provide(:subhead, "Last signed in at #{current_user.last_sign_in_at}")

= form_for resource, :validate => true, :as => resource_name, :url => registration_path(resource_name), :html => { class: "edit_user form-horizontal", :method => :put } do |f|
  %fieldset
    = render 'devise/shared/error_messages'
    .control-group
      .control-label= f.label :avatar_url, "Avatar"
      .controls= f.filepicker_field :avatar_url, button_text: "Pick file", dragdrop: true, button_class: "btn btn-small"
      .controls= image_tag @user.avatar_url, size: '140x140', class: "img-polaroid avatar" if @user.avatar_url
    .control-group
      .control-label= f.label :name
      .controls= f.text_field :name
    .control-group
      .control-label= f.label :username
      .controls= f.text_field :username
    .control-group
      .control-label= f.label :email
      .controls= f.email_field :email
    .form-actions
      = f.submit "Update", class: "btn btn-large btn-primary"
      = render 'shared/back_button'

%h4 Reset password
Forgot password? #{link_to "Forgot your password?", new_password_path(current_user)}

%h4 Cancel my account
Unhappy? #{link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete}.