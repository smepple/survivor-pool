= provide(:title, "Sign up")
= provide(:headline, "Sign up")

= form_for resource, :validate => true, :as => resource_name, :url => registration_path(resource_name), html: { class: "new_user form-horizontal" } do |f|
  %fieldset
    = render 'devise/shared/error_messages'
    .control-group
      .control-label= f.label :email
      .controls= f.email_field :email
    - if f.object.password_required?
      .control-group
        .control-label= f.label :password
        .controls= f.password_field :password
      .control-group
        .control-label= f.label :password_confirmation, "Confirm Password"
        .controls= f.password_field :password_confirmation
      .form-actions
        = f.submit "Sign up", class: "btn btn-large btn-primary"
        = render 'shared/back_button'

= render "devise/shared/links"