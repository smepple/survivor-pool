= provide(:title, @user.username)
= provide(:headline, @user.username)
= provide(:subhead, @user.name)


/ .btn-group
/   = link_to "Create a survivor pool", new_league_path, class: "btn btn-large"
/   = link_to "Join a survivor pool", new_membership_path, class: "btn btn-large"

- if current_user == @user
  %h2 My Pools
- else
  %h2 Pools
%table.table.table-bordered.table-hover.table-striped
  %thead
    %tr
      / http://stackoverflow.com/questions/9945620/making-a-table-row-into-a-link-in-rails
      %th Pool
      %th Position
  %tbody
    - if @leagues.any?
      - @leagues.each do |league|
        %tr
          %td= link_to league.name, league_path(league)
          %td 1
    - elsif @memberships.any?
      - @memberships.each do |membership|
        %tr
          - @league = League.find(membership.league_id)
          %td= link_to @league.name, league_path(@league)
          %td 1
    - else  
      %tr 
        %td
          %em You're not in any pools
        %td