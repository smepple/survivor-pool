= provide(:title, @user.username)
= provide(:headline, @user.username)
= provide(:subhead, @user.name)

- if current_user == @user
  %h2 My Leagues
- else
  %h2 Leagues
%table.table.table-bordered.table-hover.table-striped
  %thead
    %tr
      / http://stackoverflow.com/questions/9945620/making-a-table-row-into-a-link-in-rails
      %th League
      %th Position
  %tbody
    = render 'leagues'
    = render 'memberships'
    - if !@leagues.any? && !@memberships.any?
      %tr 
        %td
          %em You're not in any leagues
        %td